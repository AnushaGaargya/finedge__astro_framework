---
import Layout from '../layouts/Layout.astro';
import Showcase from '../components/Showcase.astro';
import Card from '../components/Card.astro';

// const posts = await Astro.glob('../posts/*.md');
---
<div>
<Layout title="FinEdge">
  <Showcase heading="Got a question?" text="We'd love to hear from you." />
  <section class="page-content">
  
    <div class="Container">
      
      <fieldset>
        <h4>You can drop in your details here to get a call from us.</h4>
         
      <form action="" id="form">
          <hr>
          <div class="content" id="content">
              <label for="name">Name:</label><br>
              <input type="text" id="name" ><br>
              <label for="email">Email:</label><br>
              <input type="text" id="email" name="email"><br>
              <label for="phone">Phone:</label><br>
              <input type="text" id="phone" name="phone"><br>
              <label for="msg">Message:</label><br>
              <input type="text" id="msg" name="msg"><br>
              <button type="submit" id="btn" name="data" >GET A CALL</button> 
          </div>
      </form>
       <p> 8100-1110-1010 || support@finedge.com || twitter.com/finedge </p>
  
      </fieldset>
    
    </div>
    
    


    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous"> -->
    <style>
    
        fieldset {width:500px; border: 1px rgb(94, 150, 227);
  margin:auto; border-radius: 10px; background-color: white; margin-top: 50px; align-content:center;}

        .content {margin:5px; font-family: Verdana, sans-serif; color: grey;}
        input {box-sizing: border-box;}
        #name {width:478px;}
        #email {width:478px;}
        #phone {width:478px;}
        #msg {width:478px;}
        #btn {width: 478px; color: white; background-color:rgb(94, 150, 227); border-radius: 10px; border-color: white;}
    </style>
    